alias quake="cd $HOME/quake;./ezquake-linux-x86_64"
alias browser="chromium"
alias update-quake="cd $HOME/build/ezquake-source-official && git reset --hard && git clean -qfdx && git pull && make -j$(nproc) && cp ezquake-linux-x86_64 $HOME/quake/."
alias leavemealone="touch $HOME/.leavemealone"

if [ ! -f $HOME/.leavemealone ];then
  echo "to run quake: quake"
  echo "to run a web browser: browser"
  echo "to configure display(s): lxrandr"
  echo "to configure networking: cmst [or systray icon]"
  echo "to update quake from git: update-quake"
  echo "to disable these messages: leavemealone"
fi
